{{> navbar}}
<div class="mc-font top-spacer d-flex justify-content-center">
    <div class="flex-column rounded-top-5">
        <div class="flex-row bg-dark rounded-top-5">
            <div class="sign post-sizing d-flex flex-row bg-success rounded-top-5">
                <div class = "avatar-img">
                    <img src="{{account-data.profile-pic}}">
                </div>
                <div class = "d-flex flex-column container-fluid">
                    <div class = "text-black px-3">
                        <p class="fs-1"><b>{{account-data.username}}</b></p>
                    </div>
                    <div class = "input-shadow p-3 mb-2 rounded-5">
                        <label class="mc-font">{{account-data.bio}}</label>
                    </div>
                    {{#if account-data.loggedIn}}
                    <div class="d-flex justify-content-end my-auto">
                        <form action="/users/{{account-data.username}}/edit">
                            <input class="btn btn-success mx-2" type="submit" value="Edit Profile">
                        </form>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
        <div class="">
            <div class="bg-dark rounded-bottom-5">
                <p class="text-white fs-3 mx-3"><u>Posts</u></p>
            </div>
            {{#each posts}}
            <div class="post-body d-flex flex-column bg-dark rounded-5 container-fluid slink">
                <div class="d-flex flex-column ms-3">
                    <p class="text-white mt-3 fs-3"><b>{{this.title}}</b></p>
                    <p class="sm-text text-white">Posted<br>{{formatDate this.date}}</p>
                        
                </div>
                <div class="d-flex flex-row ms-3">
                    <p class="me-3 text-white"><i class="bi bi-chat-left-text-fill me-2 text-white"></i>{{this.replies}} Replies</p>  
                    <i class="bi bi-hand-thumbs-up-fill me-2 text-success"></i><p class="text-white me-3"></i>{{this.likes}} Likes</p>  
                    <i class="bi bi-hand-thumbs-down-fill text-danger me-2"></i><p class="text-white">{{this.dislikes}} Dislikes</p>
                </div>
                <div class="post-tags d-flex flex-row ms-3">
                    {{#each tags}}
                    <p class="mx-1 p-1 border border-warning bg-warning-subtle text-dark">{{this}}</p>
                    {{/each}}
                </div>
                <div class="d-flex justify-content-end mb-1">
                    <a class="btn btn-success btn-sm m-2 stretched-link" href="/posts/{{id}}">View Thread</a>
                </div>
            </div>
            {{/each}}
        </div>
        
    </div>

</div>