{{> navbar}}
<div class="mc-font text-white m-3 d-flex flex-column justify-content-center">
    <div class="pt-5 d-flex justify-content-center">
        <div class = "shadow flex-row">
            <div class="profile-section m-2 d-flex flex-column stone-brick-bg justify-content-center">
                <a href="/users/{{post-data.author}}" class="text-center">
                    <img class="pfp-l m-3" src="{{post-data.profile-pic}}"/>
                    <p class="text-center text-white fs-5">{{post-data.author}}</p>
                </a>
                <div class="d-flex flex-row justify-content-center mt-5">
                    <div class="d-flex flex-column bg-dark rounded">
                        <div class="btn btn-success m-1">
                            <i class="bi bi-hand-thumbs-up-fill m-1"></i>
                        </div>
                        <p class="text-center text-success mt-2">{{post-data.likes}}</p>
                    </div>
                    <div class="d-flex flex-column bg-dark rounded ms-1">
                        <div class="btn btn-danger m-1">
                            <i class="bi bi-hand-thumbs-down-fill m-1"></i>
                        </div>
                        <p class="text-center text-danger mt-2">{{post-data.dislikes}}</p>
                    </div>
                </div>
                <p class="text-center text-white sm-text pt-5 px-1">Posted<br>{{post-data.ndate}}</p> 
            </div>
            <div class = "gray-concrete-bg d-flex flex-column">
                <div class="d-flex flex-row">
                    {{#if postLogged}}
                    <div class="inline-block">
                        <div class="d-dlex flex-row">
                            <a href="/posts/{{post-data.id}}/edit" class="btn btn-outline-secondary me-1 text-white h3" data-toggle="tooltip" title="Edit Post"><i class="bi bi-pencil-square"></i></a>
                            <button class="btn btn-outline-secondary text-white h3" type="button" data-bs-toggle="collapse" data-bs-target="#deletepost" aria-expanded="false" aria-controls="collapseWidthExample"><i class="bi bi-trash3-fill"></i></button>
                        </div>
                    </div>
                    {{/if}}
                    <div class="sm-height collapse collapse-horizontal inline-block ms-2" id="deletepost">
                        <div class="mc-font alert alert-danger p-1 px-2 mx-auto sm-text my-auto" role="alert">
                            <div class="d-flex flex-row">
                                <div class="sm-width">
                                    <p class="my-auto">Are you sure?</p>
                                </div>
                                <a href="#" class="btn btn-outline-success btn-sm ms-2">Delete</a>
                                <button class="btn btn-outline-danger btn-sm ms-2" type="button" data-bs-toggle="collapse" data-bs-target="#deletepost" aria-expanded="false" aria-controls="collapseWidthExample">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="light-gray-concrete-bg">
                    <h2 id="post-title"><b>{{post-data.title}}</b></h2>
                </div>
                <div class="post-tags d-flex flex-row ">
                    {{#each post-data.tags}}
                    <p class="mx-1 p-1 border border-warning bg-warning-subtle text-dark">{{this}}</p>
                    {{/each}}
                </div>
                <div class="bg-dark p-2">
                    <p>
                    {{post-data.body}}
                    </p>
                </div>
                <div class="d-flex text-center">
                    <button class="btn btn-primary mt-2" type="button" data-bs-toggle="collapse" data-bs-target="#reply-post" aria-expanded="false" aria-controls="collapseExample">
                        Reply
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center mt-1">
        <div class="collapse" id="reply-post">
            <div class="d-flex">
                <div class="bg-secondary p-3 rounded">
                    <textarea required class="reply-textarea" name="replyText" rows="10" cols="70"  placeholder = 'Enter your reply'></textarea>
                    <div class = "action-btns">
                        <button class="btn btn-success" type="submit"> Submit </button>
                        <button class="btn btn-danger"type="button" data-bs-toggle="collapse" data-bs-target="#reply-post" aria-expanded="false" aria-controls="collapseExample"> Cancel </button>
                    </div>     
                </div>
            </div>
        </div>
    </div>
    <p class="h2 ms-3"><b>Comments</b></p>
    {{> displayComment}}
</div>
